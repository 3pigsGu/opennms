<?xml version="1.0" encoding="UTF-8" standalone="no"?><?castor class-name="org.opennms.netmgt.threshd.ThreshdConfiguration"?><threshd-configuration threads="5">
	
	<package name="example1">
		<filter>IPADDR != '0.0.0.0'</filter>	 
		<specific>0.0.0.0</specific>
		<include-range begin="192.168.0.1" end="192.168.0.254"/>
		<include-url>file:${install.etc.dir}/include</include-url>
		
		<service interval="300000" name="SNMP" status="on" user-defined="false">
			<parameter key="thresholding-group" value="default-snmp"/>
		</service>
		
		<service interval="30000" name="JBoss32" status="on" user-defined="false">
			<parameter key="thresholding-group" value="jboss32"/>
		</service>

		<service interval="30000" name="JBoss4" status="on" user-defined="false">
			<parameter key="thresholding-group" value="jboss4"/>
		</service>

		 <service interval="300000" name="ICMP" status="on" user-defined="false">
                        <parameter key="thresholding-group" value="icmp-latency"/>
                </service>

                <service interval="300000" name="HTTP" status="on" user-defined="false">
                        <parameter key="thresholding-group" value="http-latency"/>
                </service>

                <service interval="300000" name="HTTP-8000" status="on" user-defined="false">
                        <parameter key="thresholding-group" value="http-8000-latency"/>
                </service>

                <service interval="300000" name="HTTP-8080" status="on" user-defined="false">
                        <parameter key="thresholding-group" value="http-8080-latency"/>
                </service>

                <service interval="300000" name="DNS" status="on" user-defined="false">
                        <parameter key="thresholding-group" value="dns-latency"/>
                </service>

                <service interval="300000" name="DHCP" status="on" user-defined="false">
                        <parameter key="thresholding-group" value="dhcp-latency"/>
                </service>

		<outage-calendar>zzz from poll-outages.xml zzz</outage-calendar>
	</package>
	
</threshd-configuration>