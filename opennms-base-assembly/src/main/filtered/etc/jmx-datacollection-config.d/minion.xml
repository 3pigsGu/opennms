<?xml version="1.0"?>
<jmx-datacollection-config rrdRepository="${install.share.dir}/rrd/snmp/">
    <jmx-collection name="jmx-minion">
        <rrd step="300">
            <rra>RRA:AVERAGE:0.5:1:2016</rra>
            <rra>RRA:AVERAGE:0.5:12:1488</rra>
            <rra>RRA:AVERAGE:0.5:288:366</rra>
            <rra>RRA:MAX:0.5:288:366</rra>
            <rra>RRA:MIN:0.5:288:366</rra>
        </rrd>
        <mbeans>
        	 <mbean name="JVM Memory" objectname="java.lang:type=OperatingSystem">
                <attrib name="FreePhysicalMemorySize" alias="FreeMemory" type="gauge"/>
                <attrib name="TotalPhysicalMemorySize" alias="TotalMemory" type="gauge"/>
                <attrib name="FreeSwapSpaceSize" alias="FreeSwapSpace" type="gauge"/>
                <attrib name="TotalSwapSpaceSize" alias="TotalSwapSpace" type="gauge"/>
            </mbean>
            <mbean name="JVM Threading" objectname="java.lang:type=Threading">
                <attrib name="ThreadCount" alias="ThreadCount" type="gauge"/>
                <attrib name="PeakThreadCount" alias="PeakThreadCount" type="gauge"/>
                <attrib name="DaemonThreadCount" alias="DaemonThreadCount" type="gauge"/>
                <attrib name="CurrentThreadCpuTime" alias="CurThreadCpuTime" type="gauge"/>
            </mbean>
            <mbean name="JVM GarbageCollector:MarkSweepCompact" objectname="java.lang:type=GarbageCollector,name=MarkSweepCompact">
                <attrib name="CollectionCount" alias="MSCCollCnt" type="counter"/>
                <attrib name="CollectionTime" alias="MSCCollTime" type="counter"/>
                <comp-attrib name="LastGcInfo" type="Composite" alias="MSCLastGcInfo">
                    <comp-member name="GcThreadCount" type="gauge" alias="MSCGcThreadCnt"/>
                    <comp-member name="duration" type="gauge" alias="MSCDuration"/>
                    <comp-member name="endTime" type="gauge" alias="MSCEndTime"/>
                </comp-attrib>
            </mbean>

            <!-- Route/seda stats for syslogHandleMessage -->
            <mbean name="Syslog Message Processing" objectname="org.apache.camel:context=org.opennms.features.events.syslog,type=routes,name=&quot;syslogHandleMessage&quot;">
                <!-- TODO: Make aliases unique -->
                <attrib name="ExchangesCompleted" alias="SyslogCompleted" type="counter"/>
                <attrib name="ExchangesFailed" alias="SyslogFailed" type="counter"/>
                <attrib name="ExchangesTotal" alias="SyslogTotal" type="counter"/>
                <attrib name="MaxProcessingTime" alias="SyslogMaxProc" type="gauge"/>
                <attrib name="MeanProcessingTime" alias="SyslogMeanProc" type="gauge"/>
                <attrib name="MinProcessingTime" alias="SyslogMinProc" type="gauge"/>
                <attrib name="LastProcessingTime" alias="SyslogLastProc" type="gauge"/>
                <attrib name="TotalProcessingTime" alias="SyslogTotalProc" type="counter"/>
            </mbean>
            <mbean name="Syslog Message Processing Queue" objectname="org.apache.camel:context=org.opennms.features.events.syslog,type=endpoints,name=&quot;seda://handleMessage?concurrentConsumers=4&quot;">
                <attrib name="CurrentQueueSize" alias="SyslogHandlerQueue" type="gauge"/>
            </mbean>

            <!-- Route/seda stats for syslogSendMessage -->
            <mbean name="Syslog Message Sender" objectname="org.apache.camel:context=org.opennms.features.events.syslog,type=routes,name=&quot;syslogSendMessage&quot;">
                <attrib name="ExchangesCompleted" alias="SyslogCompleted" type="counter"/>
                <attrib name="ExchangesFailed" alias="SyslogFailed" type="counter"/>
                <attrib name="ExchangesTotal" alias="SyslogTotal" type="counter"/>
                <attrib name="MaxProcessingTime" alias="SyslogMaxProc" type="gauge"/>
                <attrib name="MeanProcessingTime" alias="SyslogMeanProc" type="gauge"/>
                <attrib name="MinProcessingTime" alias="SyslogMinProc" type="gauge"/>
                <attrib name="LastProcessingTime" alias="SyslogLastProc" type="gauge"/>
                <attrib name="TotalProcessingTime" alias="SyslogTotalProc" type="counter"/>
            </mbean>
            <mbean name="Syslog Message Sender Queue" objectname="org.apache.camel:context=org.opennms.features.events.syslog,type=endpoints,name=&quot;seda://sendMessage&quot;">
                <attrib name="CurrentQueueSize" alias="SyslogSendQueue" type="gauge"/>
            </mbean>

            <!-- Route/seda stats for trapHandlerMinion -->
            <mbean name="Trap Message Processor" objectname="org.apache.camel:context=org.opennms.features.events.traps,type=routes,name=&quot;trapdHandlerMinion&quot;">
                <attrib name="ExchangesCompleted" alias="TrapCompleted" type="counter"/>
                <attrib name="ExchangesFailed" alias="TrapFailed" type="counter"/>
                <attrib name="ExchangesTotal" alias="TrapTotal" type="counter"/>
                <attrib name="MaxProcessingTime" alias="TrapMaxProc" type="gauge"/>
                <attrib name="MeanProcessingTime" alias="TrapMeanProc" type="gauge"/>
                <attrib name="MinProcessingTime" alias="TrapMinProc" type="gauge"/>
                <attrib name="LastProcessingTime" alias="TrapLastProc" type="gauge"/>
                <attrib name="TotalProcessingTime" alias="TrapTotalProc" type="counter"/>
            </mbean>
            <!-- TODO: Add seda stats -->

            <!-- TODO: Collect route stats for RPC.Server.Discover (when available) -->

            <!-- TODO: Collect route stats for RPC.Server.Detect -->

            <!-- Route stats for RPC.Server.SNMP -->
            <mbean name="SNMP RPC Server" objectname="org.apache.camel:context=org.opennms.core.rpc.camel-impl,type=routes,name=&quot;RPC.Server.SNMP&quot;">
                <attrib name="ExchangesCompleted" alias="SnmpCompleted" type="counter"/>
                <attrib name="ExchangesFailed" alias="SnmpFailed" type="counter"/>
                <attrib name="ExchangesTotal" alias="SnmpTotal" type="counter"/>
                <attrib name="MaxProcessingTime" alias="SnmpMaxProc" type="gauge"/>
                <attrib name="MeanProcessingTime" alias="SnmpMeanProc" type="gauge"/>
                <attrib name="MinProcessingTime" alias="SnmpMinProc" type="gauge"/>
                <attrib name="LastProcessingTime" alias="SnmpLastProc" type="gauge"/>
                <attrib name="TotalProcessingTime" alias="SnmpTotalProc" type="counter"/>
            </mbean>

            <!-- TODO: Collect route stats for RPC.Server.Poll (when available) -->

        </mbeans>
    </jmx-collection>
</jmx-datacollection-config>
