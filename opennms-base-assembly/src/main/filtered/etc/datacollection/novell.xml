<?xml version="1.0" encoding="UTF-8" standalone="no"?><datacollection-group name="Novell">

    <!-- Netware Resource Types -->
    <resourceType label="Netware Disk" name="netwareDisk" resourceLabel="${nwLabel}">
      <persistenceSelectorStrategy class="org.opennms.netmgt.collectd.PersistAllSelectorStrategy"/>
      <storageStrategy class="org.opennms.netmgt.dao.support.SiblingColumnStorageStrategy">
        <parameter key="sibling-column-name" value="nwLabel"/>
		<parameter key="replace-first" value="s/^-$/_root_fs/"/>
		<parameter key="replace-all" value="s/^-//"/>
		<parameter key="replace-all" value="s/\s//"/>
		<parameter key="replace-all" value="s/:\\/_/"/>
		<parameter key="replace-all" value="s/:/_/"/>
      </storageStrategy>
    </resourceType>

      <!-- Novell MIBs -->
      <group ifType="ignore" name="netware-host">
        <mibObj alias="cpuPercentBusy" instance="1" oid=".1.3.6.1.2.1.25.3.3.1.2" type="integer"/>
        <mibObj alias="numberOfNLMsLoaded" instance="0" oid=".1.3.6.1.2.1.25.1.6" type="gauge"/>
        <mibObj alias="memorySize" instance="0" oid=".1.3.6.1.2.1.25.2.2" type="integer"/>
        <mibObj alias="cacheBuffersUnits" instance="3" oid=".1.3.6.1.2.1.25.2.3.1.4" type="integer"/>
        <mibObj alias="cacheBuffersSize" instance="3" oid=".1.3.6.1.2.1.25.2.3.1.5" type="integer"/>
        <mibObj alias="cacheBuffersUsed" instance="3" oid=".1.3.6.1.2.1.25.2.3.1.6" type="integer"/>
        <mibObj alias="codeDataMemoryUnits" instance="6" oid=".1.3.6.1.2.1.25.2.3.1.4" type="integer"/>
        <mibObj alias="codeDataMemorySize" instance="6" oid=".1.3.6.1.2.1.25.2.3.1.5" type="integer"/>
        <mibObj alias="codeDataMemoryUsed" instance="6" oid=".1.3.6.1.2.1.25.2.3.1.6" type="integer"/>
        <mibObj alias="currentOpenFiles" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.7" type="integer"/>
        <mibObj alias="licensedConnections" instance="0" oid=".1.3.6.1.4.1.23.2.28.3.2" type="integer"/>
      </group>

      <group ifType="all" name="netware-disk">
        <mibObj alias="nwLabel" instance="netwareDisk" oid=".1.3.6.1.4.1.23.2.28.2.14.1.2" type="string"/>
        <mibObj alias="nwVolSize" instance="netwareDisk" oid=".1.3.6.1.4.1.23.2.28.2.14.1.3" type="integer"/>
        <mibObj alias="nwFreeSpace" instance="netwareDisk" oid=".1.3.6.1.4.1.23.2.28.2.14.1.4" type="integer"/>
        <mibObj alias="nwFreeableSpace" instance="netwareDisk" oid=".1.3.6.1.4.1.23.2.28.2.14.1.5" type="integer"/>
      </group>

      <group ifType="ignore" name="netware-fs-scalars">
        <mibObj alias="nwFSReads" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.1" type="counter"/>
        <mibObj alias="nwFSWrites" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.2" type="counter"/>
        <mibObj alias="nwFSReadKB" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.3" type="counter"/>
        <mibObj alias="nwFSWrittenKB" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.4" type="counter"/>
        <mibObj alias="nwFSCacheChecks" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.5" type="counter"/>
        <mibObj alias="nwFSCacheHits" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.6" type="counter"/>
        <mibObj alias="nwFSOpenFiles" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.7" type="gauge"/>
        <mibObj alias="nwFSMaxOpenFiles" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.8" type="integer"/>
        <mibObj alias="nwFSRecordLocks" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.9" type="gauge"/>
        <mibObj alias="nwFSMaxRecordLocks" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.10" type="integer"/>
        <mibObj alias="nwFSVolCount" instance="0" oid=".1.3.6.1.4.1.23.2.28.2.13" type="gauge"/>
      </group>

      <systemDef name="Novell Netware">
        <sysoidMask>.1.3.6.1.4.1.23.</sysoidMask>
        <collect>
          <includeGroup>netware-host</includeGroup>
          <includeGroup>netware-disk</includeGroup>
          <includeGroup>netware-fs-scalars</includeGroup>
        </collect>
      </systemDef>

</datacollection-group>