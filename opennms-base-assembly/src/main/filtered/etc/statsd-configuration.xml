<?xml version="1.0" encoding="UTF-8" standalone="no"?><statistics-daemon-configuration xmlns:this="http://www.opennms.org/xsd/config/statsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.opennms.org/xsd/config/statsd http://www.opennms.org/xsd/config/statistics-daemon-configuration.xsd ">

  <!--
       The following packages are simple sample configuration.
       All of them are disabled by default (status="off").
       Change the status to be "on" on to enable the scheduling.

       To reload the configuration, use the following command:
       ${install.dir}/bin/send-event.pl \
         uei.opennms.org/internal/reloadDaemonConfig \
         -p 'daemonName Statsd'
  -->

  <package name="ThroughputReports">
    <packageReport description="Top 20 ifInOctets across all nodes" name="TopN_InOctets" retainInterval="2592000000" schedule="0 20 1 * * ?" status="off">
      <parameter key="count" value="20"/>
      <parameter key="consolidationFunction" value="AVERAGE"/>
      <parameter key="relativeTime" value="YESTERDAY"/>
      <parameter key="resourceTypeMatch" value="interfaceSnmp"/>
      <parameter key="attributeMatch" value="ifInOctets"/>
    </packageReport>
  </package>
  
  <package name="ResponseTimeReports">
    <packageReport description="Weekly Top 10 responses across all nodes" name="Top10_Response_Weekly" retainInterval="2592000000" schedule="0 0 0 ? * MON" status="off">
      <parameter key="count" value="10"/>
      <parameter key="consolidationFunction" value="AVERAGE"/>
      <parameter key="relativeTime" value="LASTSEVENDAYS"/>
      <parameter key="resourceTypeMatch" value="responseTime"/>
      <parameter key="attributeMatch" value="icmp"/>
    </packageReport>
    
    <packageReport description="This Month Top 10 responses across all nodes" name="Top10_Response_This_Month" retainInterval="2592000000" schedule="0 0 0 L * ?" status="off">
      <parameter key="count" value="10"/>
      <parameter key="consolidationFunction" value="AVERAGE"/>
      <parameter key="relativeTime" value="LASTTHIRTYONEDAYS"/>
      <parameter key="resourceTypeMatch" value="responseTime"/>
      <parameter key="attributeMatch" value="icmp"/>
    </packageReport>
    
    <packageReport description="Last Month Top 10 responses across all nodes" name="Top10_Response_Last_Month" retainInterval="2592000000" schedule="0 0 0 1 * ?" status="off">
      <parameter key="count" value="10"/>
      <parameter key="consolidationFunction" value="AVERAGE"/>
      <parameter key="relativeTime" value="LASTTHIRTYONEDAYS"/>
      <parameter key="resourceTypeMatch" value="responseTime"/>
      <parameter key="attributeMatch" value="icmp"/>
    </packageReport>
    
    <packageReport description="This Year Top 10 responses across all nodes" name="Top10_Response_This_Year" retainInterval="2592000000" schedule="0 0 0 1 * ?" status="off">
      <parameter key="count" value="10"/>
      <parameter key="consolidationFunction" value="AVERAGE"/>
      <parameter key="relativeTime" value="THISYEAR"/>
      <parameter key="resourceTypeMatch" value="responseTime"/>
      <parameter key="attributeMatch" value="icmp"/>
    </packageReport>
  </package>
  
  
  <report class-name="org.opennms.netmgt.dao.support.TopNAttributeStatisticVisitor" name="TopN_InOctets"/>
  <report class-name="org.opennms.netmgt.dao.support.TopNAttributeStatisticVisitor" name="Top10_Response_Weekly"/>
  <report class-name="org.opennms.netmgt.dao.support.TopNAttributeStatisticVisitor" name="Top10_Response_This_Month"/>
  <report class-name="org.opennms.netmgt.dao.support.TopNAttributeStatisticVisitor" name="Top10_Response_Last_Month"/>
  <report class-name="org.opennms.netmgt.dao.support.TopNAttributeStatisticVisitor" name="Top10_Response_This_Year"/>

</statistics-daemon-configuration>