<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	<bean id="smsService" class="org.opennms.sms.reflector.SmsServiceImpl">
		<property name="service" ref="smsLibService"/>
	</bean>
	
	<bean id="smsLibService" class="org.smslib.Service">
		<property name="outboundNotification" ref="outboundMessageNotification"/>
		<property name="inboundNotification" ref="inboundMessageNotification"/>
		<property name="gatewayStatusNotification" ref="gatewayStatusNotification"/>
	</bean>
	
	<bean id="gatewayListener" class="org.opennms.sms.reflector.GatewayListener">
		<property name="service" ref="smsLibService"/>
	</bean>
	
	<bean id="outboundMessageNotification" class="org.opennms.sms.reflector.OutboundMessageNotification">
		<property name="listenerList" ref="outboundList"/>
	</bean>
	
	<bean id="inboundMessageNotification" class="org.opennms.sms.reflector.InboundMessageNotification">
		<property name="listenerList" ref="inboundList"/>
	</bean>
	
	<bean id="gatewayStatusNotification" class="org.opennms.sms.reflector.GatewayStatusNotification">
		<property name="listenerList" ref="gatewayStatusList"></property>
	</bean>
	
	
</beans>
