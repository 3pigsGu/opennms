    <osgi:list id="outboundList" cardinality="0..N" interface="org.smslib.IOutboundMessageNotification"/>
    <osgi:list id="inboundList" cardinality="0..N" interface="org.smslib.IInboundMessageNotification"/>
    <osgi:list id="gatewayStatusList" cardinality="0..N" interface="org.smslib.IGatewayStatusNotification"/>
    
    <osgi:list id="gatewayGroupList" cardinality="0..N" interface="org.opennms.sms.reflector.smsservice.GatewayGroup">
    	<osgi:listener bind-method="onGatewayGroupRegistered" unbind-method="onGatewayGroupUnRegistered">
			<bean class="org.opennms.sms.reflector.smsservice.internal.GatewayGroupListener">
	        	<property name="outboundListeners" ref="outboundList" />
