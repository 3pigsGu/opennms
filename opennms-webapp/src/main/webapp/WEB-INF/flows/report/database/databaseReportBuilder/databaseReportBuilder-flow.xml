<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<secured attributes="ROLE_USER" />

	<var name="triggerDetails" class="org.opennms.web.report.database.model.TriggerDetails" />

	<input name="reportId" required="true" />
	<input name="schedule" type="boolean" required="true" />

	<on-start>
		<evaluate expression="databaseReportConfigDao.getReportService(reportId)" result="flowScope.reportServiceName" />
		<evaluate expression="databaseReportCriteriaService.getCriteria(reportId)" result="flowScope.criteria" />
	</on-start>
	
	<view-state id="scheduledReportParameters" model="criteria">
		<!--<binder>
			<binding property="dates" converter="shortDate" required="true" />
			<binding property="categories" required="true" />
		</binder>-->
		<on-render>
        	<evaluate expression="categoryConfigService.getCategoriesList()"
                  result="viewScope.categories" />
    	</on-render>
		<transition on="proceed" to="deliveryOptions" />
		<transition on="cancel" to="reportCancelled" bind="false" />
	</view-state>

	<view-state id="deliveryOptions" model="deliveryOptions">
		<!-- <binder>
			<binding property="persist" required="true" />
			<binding property="sendMail" required="true" />
			<binding property="mailTo" />
			<binding property="mailFormat" />
		</binder>
		-->
		<on-render>
			<evaluate expression="reportServiceLocator.getReportServiceForId(reportId).getDeliveryOptions(reportId, currentUser.name)" 
				result="flowScope.deliveryOptions" />
			<evaluate expression="reportServiceLocator.getReportServiceForId(reportId).getFormats(reportId)"
				result="viewScope.formats" />
		</on-render>
		<transition on="proceed" to="scheduleOrExecute" />
		<transition on="revise" to="scheduledReportParameters" />
		<transition on="cancel" to="reportCancelled" />
	</view-state>
	
	<!--
	
	TODO Decide if we want to review this at all (value is limited)
	
	<view-state id="reviewReport" model="criteria">
		<transition on="proceed" to="scheduleOrExecute" />
		<transition on="revise" to="scheduledReportParameters" />
		<transition on="cancel" to="reportCancelled" />
	</view-state>
	
	-->
	
	<decision-state id="scheduleOrExecute">
    	<if test="schedule" then="triggerDetails" else="executeReport" />
	</decision-state>

	<action-state id="executeReport">
		<evaluate expression="reportSchedulerService.execute(criteria, deliveryOptions, flowRequestContext)" />
		<transition on="success" to="reportRunning" />
		<transition on="error" to="reportError" />
	</action-state>
	
	<view-state id="triggerDetails" model="triggerDetails">
		<transition on="revise" to="scheduledReportParameters" />
		<transition on="cancel" to="reportCancelled" />
		<transition on="proceed" to="scheduleReport" />
	</view-state>
	
	<action-state id="scheduleReport">
		<evaluate expression="reportSchedulerService.addCronTrigger(criteria, 
			deliveryOptions, 
			triggerDetails.getTriggerName(),
        	triggerDetails.getCronExpression(),
        	flowRequestContext)" />
		<transition on="success" to="reportScheduled" />
		<transition on="error" to="reportError" />
	</action-state>
		
	<view-state id="reportError">
		<transition on="proceed" to="reportCancelled" />
	</view-state>
	
	<view-state id="reportRunning">
		<transition on="proceed" to="reportComplete" />
	</view-state>
	
	<view-state id="reportScheduled">
		<transition on="proceed" to="reportComplete" />
	</view-state>

	<end-state id="reportCancelled" />
	<end-state id="reportComplete" />

</flow>
