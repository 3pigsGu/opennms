      <includes>
        <include>org.opennms:opennms-webapp</include>
      </includes>
      <binaries>
        <outputDirectory>${install.webapps.dir}</outputDirectory>
        <unpack>true</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.opennms:opennms-daemon</include>
      </includes>
      <binaries>
