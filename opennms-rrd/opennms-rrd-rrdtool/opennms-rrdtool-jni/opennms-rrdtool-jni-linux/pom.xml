<?xml version="1.0" encoding="UTF-8"?><project>
  <parent>
    <artifactId>opennms-rrdtool-jni</artifactId>
    <groupId>org.opennms</groupId>
    <version>1.3.2-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>opennms-rrdtool-jni-linux</artifactId>
  <packaging>so</packaging>
  <name>OpenNMS RRDTool JNI Library - Linux</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>native-maven-plugin</artifactId>
        <extensions>true</extensions>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>javah</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <compilerProvider>generic</compilerProvider>
          <compilerStartOptions>
            <compilerStartOption>-fPIC -O -D__LINUX__ ${build.jni.compiler.arg}</compilerStartOption>
          </compilerStartOptions>
          <sources>
            <source>
              <directory>${build.rrd.include.dir}</directory>
            </source>
            <source>
              <directory>../src/main/native</directory>
              <fileNames>
                <fileName>rrd_jinterface.c</fileName>
              </fileNames>
            </source>
          </sources>
          <linkerStartOptions>
            <linkerStartOption>-shared ${build.jni.compiler.arg} ${build.jni.linker.arg} -L${build.rrd.lib.dir} -lrrd -lc -ldl</linkerStartOption>
          </linkerStartOptions>
          <javahOS>linux</javahOS>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
