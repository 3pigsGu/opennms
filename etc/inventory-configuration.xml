<?xml version="1.0"?>
<inventory-configuration threads="30" refreshListTime="129600000" sendEachSuccessEvent="true" fileRepository="@install.prefix@@install.share.dir@/inventory">
    <package name="ldap">
        <filter>IPADDR IPLIKE *.*.*.*</filter>
        <specific>192.168.0.10</specific>
        <group name="LdapInventory" interval="86400000" send-events="true" compare="true">
            <parameter key="path" value="/ldap_inventory.xml"/>
            <parameter key="retry" value="1"/>
            <parameter key="timeout" value="3"/>
            <parameter key="definition-name" value="def 1"/>
            <parameter key="plugin-conf-file" value="@install.etc.dir@/inventory/ldap-config.xml"/>
        </group>
        <downtime begin="0" end="43200000" interval="3600000"/>
        <downtime begin="43200000" end="129600000" interval="10800000"/>
        <downtime begin="129600000" delete="true"/>
    </package>
    <package name="ssh">
        <filter>IPADDR IPLIKE *.*.*.*</filter>
        <specific>10.0.0.200</specific>
        <group name="UnixOS" interval="86400000" send-events="true" compare="true">
            <parameter key="path" value="/unix-os.xml"/>
            <parameter key="port" value="22"/>
            <parameter key="timeout" value="1"/>
            <parameter key="session" value="Operating System"/>
            <parameter key="plugin-conf-file" value="@install.etc.dir@/inventory/ssh.xml"/>
        </group>
        <group name="Processor" interval="86400000" send-events="true" compare="true">
            <parameter key="path" value="/processor.xml"/>
            <parameter key="port" value="22"/>
            <parameter key="timeout" value="1"/>
            <parameter key="session" value="Processor"/>
            <parameter key="plugin-conf-file" value=" @install.etc.dir@/inventory/ssh.xml"/>
        </group>
        <downtime begin="0" end="43200000" interval="3600000"/>
        <downtime begin="43200000" end="129600000" interval="10800000"/>
        <downtime begin="129600000" delete="true"/>
    </package>
    <package name="cisco">
        <filter>IPADDR IPLIKE *.*.*.*</filter>
        <include-range begin="10.0.0.248" end="10.0.0.254"/>
        <include-range begin="192.168.0.1" end="192.168.0.5"/>
        <include-range begin="192.168.0.250" end="192.168.0.254"/>
        <specific>192.168.1.254</specific>
        <specific>192.168.2.254</specific>
        <specific>192.168.3.254</specific>
        <specific>192.168.4.254</specific>
        

        <group name="Show Version" interval="86400000" send-events="true" compare="true">
            <parameter key="path" value="/show_ver.xml"/>
            <parameter key="port" value="23"/>
            <parameter key="timeout" value="1"/>
            <parameter key="command" value="Show Version"/>
            <parameter key="plugin-conf-file" value="@install.etc.dir@/inventory/cisco.xml"/>
        </group>
        <group name="Saved Configuration" interval="86400000" send-events="true" compare="true">
            <parameter key="path" value="/show_conf.xml"/>
            <parameter key="port" value="23"/>
            <parameter key="timeout" value="1"/>
            <parameter key="command" value="show conf"/>
            <parameter key="plugin-conf-file" value="@install.etc.dir@/inventory/cisco.xml"/>
        </group>
        <group name="Running Configuration" interval="86400000" send-events="true" compare="true">
            <parameter key="path" value="/show_run.xml"/>
            <parameter key="port" value="23"/>
            <parameter key="timeout" value="1"/>
            <parameter key="command" value="show run"/>
            <parameter key="plugin-conf-file" value="@install.etc.dir@/inventory/cisco.xml"/>
        </group>
        <downtime begin="0" end="43200000" interval="3600000"/>
        <downtime begin="43200000" end="129600000" interval="10800000"/>
        <downtime begin="129600000" delete="true"/>
    </package>
    <monitor group="UnixOS" required-service="SSH" class-name="org.opennms.netmgt.inventory.SshInventoryMonitor" inventory-type="Ssh OS" visualization="text"/>
    <monitor group="Processor" required-service="SSH" class-name="org.opennms.netmgt.inventory.SshInventoryMonitor" inventory-type="Ssh Processor" visualization="text"/>
    <monitor group="LdapInventory" required-service="LDAP" class-name="org.opennms.netmgt.inventory.LdapInventoryMonitor" inventory-type="Ldap" visualization="tree"/>
    <monitor group="Saved Configuration" required-service="Telnet" class-name="org.opennms.netmgt.inventory.TelnetInventoryMonitor" inventory-type="Cisco show conf" visualization="text"/>
    <monitor group="IOS" required-service="Telnet" class-name="org.opennms.netmgt.inventory.TelnetInventoryMonitor" inventory-type="Cisco show ver" visualization="text"/>
    <monitor group="Show Version" required-service="Telnet" class-name="org.opennms.netmgt.inventory.TelnetInventoryMonitor" inventory-type="Cisco show ver" visualization="text"/>
    <monitor group="Running Configuration" required-service="Telnet" class-name="org.opennms.netmgt.inventory.TelnetInventoryMonitor" inventory-type="Cisco show run" visualization="text"/>
    
    <visualization type="tree" class-name="org.opennms.web.inventory.TreeVisualization"/>
    <visualization type="text" class-name="org.opennms.web.inventory.TextVisualization"/>
</inventory-configuration>
