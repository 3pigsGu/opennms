<?xml version="1.0" encoding="UTF-8"?>
<tns:chart-configuration xmlns:tns="http://xmlns.opennms.org/xsd/config/charts" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.opennms.org/xsd/config/charts ../src/services/org/opennms/netmgt/config/chart-configuration.xsd ">

  <tns:bar-chart name="sample-bar-chart" variation="2d" domain-axis-label="domain label" show-legend="true" plot-orientation="vertical" draw-bar-outline="true" range-axis-label="range label" show-urls="false"
      show-tool-tips="false">
      
      <tns:jdbc-data-set db-name="opennms" sql="select severity, count(*) as count from alarms group by severity order by count desc" />
      
      <tns:title font="SansSerif" style="" value="Sample Bar Chart" pitch="12" />
      
      <tns:sub-title position="top" horizontal-alignment="center">
          <tns:title font="SansSerif" style="" value="Sample SubTitle" pitch="10" />
      </tns:sub-title>
      
      <tns:grid-lines visible="true">
          <tns:rgb>
              <tns:red>
                  <tns:rgb-color>255</tns:rgb-color>
              </tns:red>
              <tns:green>
                  <tns:rgb-color>255</tns:rgb-color>
              </tns:green>
              <tns:blue>
                  <tns:rgb-color>255</tns:rgb-color>
              </tns:blue>
          </tns:rgb>
      </tns:grid-lines>
      
  </tns:bar-chart>
</tns:chart-configuration>
