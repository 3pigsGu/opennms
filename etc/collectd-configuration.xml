<?xml version="1.0"?>
<?castor class-name="org.opennms.netmgt.collectd.CollectdConfiguration"?>
<collectd-configuration 
	threads="50">

	<package name="example1">
		<filter>IPADDR IPLIKE *.*.*.*</filter>	 
		<specific>0.0.0.0</specific>
		<include-range begin="1.1.1.1" end="254.254.254.254"/>
		<include-url>file:@install.etc.dir@/include</include-url>
		
		<service name="SNMP" interval="300000" user-defined="false" status="on">
			<parameter key="collection" value="default"/>
			<parameter key="port" value="161"/>
			<parameter key="retry" value="3"/>
			<parameter key="timeout" value="3000"/>
		</service>

		<service name="JBoss" interval="30000" user-defined="false" status="on">
			<parameter key="port" value="1099"/>
			<parameter key="retry" value="2"/>
			<parameter key="timeout" value="3000"/>
			<parameter key="factory" value="RMI"/>
                <!-- if you set the factory to HTTP (necessary when monitoring through a firewall) then you 
                     need to ensure the invoker-suffix property is properly set.  The port must match the 
                     InvokerURLSuffix value in the jboss-service.xml found in the 
                     <jboss-home>/server/default/deploy/http-invoker/META-INF directory
                     
                     Also do not use the port property above since it is not used, the reason is that the
                     HTTP service already is monitoring on that port.  The default value is already in place (below)
                     so you shouldn't need to modify it unless JBoss is running on another port.

                     NOTE:  For JBoss 3.2, you should only modify the port and leave "/invoker/JNDIFactory"
                 -->
			<parameter key="invoker-suffix" value=":8080/invoker/JNDIFactory"/>
		</service>
		
		<outage-calendar>zzz from poll-outages.xml zzz</outage-calendar>
	</package>
	
	<package name="example2">
		<filter>IPADDR IPLIKE *.*.*.*</filter>	 
		<specific>0.0.0.0</specific>
		<include-range begin="1.1.1.1" end="254.254.254.254"/>
		<include-url>file:@install.etc.dir@/include</include-url>
		
		
		<outage-calendar>zzz from poll-outages.xml zzz</outage-calendar>
	</package>
	
	<collector service="JBoss"      class-name="org.opennms.netmgt.collectd.JBossCollector"/>
	<collector service="SNMP" 	class-name="org.opennms.netmgt.collectd.SnmpCollector"/>
</collectd-configuration>

