<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd" >

  <changeSet author="jwhite" id="20.0.0-node-metadata">
    <createTable tableName="node_metadata" >
      <column name="nodeid" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="context" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="key" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="value" type="text">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addPrimaryKey tableName="node_metadata" columnNames="nodeid, context, key" constraintName="node_metadata_pkey" />
    <addForeignKeyConstraint constraintName="fk_node_metadata_nodeid"
                             baseTableName="node_metadata" baseColumnNames="nodeid"
                             referencedTableName="node" referencedColumnNames="nodeid" />

  </changeSet>

</databaseChangeLog>
