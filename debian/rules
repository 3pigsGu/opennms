#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatability version to use.
export DH_COMPAT=3

export BUILDDEFINES=-Droot.install=/opt/OpenNMS -Droot.install.initdir=/etc/init.d -Droot.install.servlets=/var/tomcat4/webapps/opennms -Droot.install.share=/var/opennms -Droot.install.rrdtool=/usr/lib -Droot.install.postgresql=/usr/lib/postgresql/opennms -Droot.install.logs=/var/log/opennms

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	

	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir

	# Add here commands to compile the package.
	JAVA_HOME=/usr/lib/j2sdk1.3 ./build.sh $(BUILDDEFINES) compile
	rm -f debian/conffiles
	find etc -type f -maxdepth 1 -exec echo "/opt/OpenNMS/{}" >> debian/conffiles \; 2>/dev/null
	#/usr/bin/docbook-to-man debian/opennms.sgml > opennms.1

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	JAVA_HOME=/usr/lib/j2sdk1.3 ./build.sh clean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Add here commands to install the package into debian/opennms.
	JAVA_HOME=/usr/lib/j2sdk1.3 ./build.sh -Droot.installprefix=$(CURDIR)/debian/opennms -Drelative.installprefix=debian/opennms $(BUILDDEFINES) install
	dpkg-shlibdeps debian/opennms/opt/OpenNMS/lib/eventtime.so.* debian/opennms/opt/OpenNMS/lib/iplike.so.* debian/opennms/opt/OpenNMS/lib/libjicmp.so.* debian/opennms/opt/OpenNMS/lib/libjrrd.so.*


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
#	dh_installdebconf	
	dh_installdocs
	dh_installexamples
	dh_installmenu
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
	dh_installcron
	dh_installman
	dh_installinfo
#	dh_undocumented
	dh_installchangelogs 
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_makeshlibs
	dh_installdeb
#	dh_perl
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
