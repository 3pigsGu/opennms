#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatability version to use.
export DH_COMPAT=3

export BUILDDEFINES=-Droot.install=/usr/share/opennms -Droot.install.initdir=/etc/init.d -Droot.install.sbindir=/usr/sbin -Droot.install.contrib=/usr/share/opennms/contrib -Droot.install.rrdtool=/usr/lib -Droot.install.share=/var/lib/opennms -Droot.install.servlets=/usr/share/java/webapps/opennms -Droot.install.logs=/var/log/opennms -Droot.install.pid=/var/run/opennms.pid -Droot.install.postgresql=/usr/lib/postgresql/lib/opennms


# Added to move the JAVA_HOME check up top
ifndef JAVA_HOME
	JAVA_HOME = /usr/lib/j2sdk-1.4.0
endif
export JAVA_HOME


configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	

	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir

	# Add here commands to compile the package.
	sh ./build.sh $(BUILDDEFINES) compile
	rm -f debian/conffiles
	find etc -type f -maxdepth 1 -printf "/etc/opennms/%f\n" >> debian/conffiles 2>/dev/null
	#/usr/bin/docbook-to-man debian/opennms.sgml > opennms.1

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	sh ./build.sh clean
	> debian/conffiles

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Add here commands to install the package into debian/opennms.
	sh ./build.sh -Droot.installprefix=$(CURDIR)/debian/opennms -Drelative.installprefix=debian/opennms $(BUILDDEFINES) install

	# Move the PostgreSQL function into the right spot
	mv $(CURDIR)/debian/opennms/usr/share/opennms/lib/iplike.so* $(CURDIR)/debian/opennms/usr/lib/postgresql/lib/opennms/

	# Move the JAVA native shared libs into /usr/lib
	# NOPE -- doesn't work
	#mv $(CURDIR)/debian/opennms/usr/share/opennms/lib/libjicmp.so* $(CURDIR)/debian/opennms/usr/share/opennms/lib/libjrrd.so* $(CURDIR)/debian/opennms/usr/lib/

	# Move the configs to a standard spot and link up
	mv $(CURDIR)/debian/opennms/usr/share/opennms/etc/* $(CURDIR)/debian/opennms/etc/opennms/
	rmdir $(CURDIR)/debian/opennms/usr/share/opennms/etc
	ln -s /etc/opennms $(CURDIR)/debian/opennms/usr/share/opennms/etc

	# Link in the libs for tomcat4
	for f in castor-0.9.3.9.jar log4j.jar opennms_common.jar \
	  opennms_core.jar opennms_services.jar opennms_web.jar; do \
		ln -s ../../../opennms/lib/$$f \
		   $(CURDIR)/debian/opennms/usr/share/tomcat4/server/lib/ ; \
	done

	# Remove the init script cuz we have a good debian-style script
	rm -f $(CURDIR)/debian/opennms/etc/init.d/opennms

	# Add the /usr/bin/opennms script
	cp opennms.binscript $(CURDIR)/debian/opennms/usr/bin/opennms
	chmod 755 $(CURDIR)/debian/opennms/usr/bin/opennms

	# Fix up some of the scripts and configs
	sed -e 's/var\/tomcat4\/conf/etc\/tomcat4/' -e 's/sw\/lib/usr\/lib\/postgresql\/lib/' $(CURDIR)/debian/opennms/usr/share/opennms/bin/install.pl > $(CURDIR)/debian/opennms/usr/share/opennms/bin/install.pl.tmp
	mv $(CURDIR)/debian/opennms/usr/share/opennms/bin/install.pl.tmp $(CURDIR)/debian/opennms/usr/share/opennms/bin/install.pl
	sed -e 's/bin\/mail/usr\/bin\/mail/' $(CURDIR)/debian/opennms/etc/opennms/notificationCommands.xml > $(CURDIR)/debian/opennms/etc/opennms/notificationCommands.xml.tmp
	mv $(CURDIR)/debian/opennms/etc/opennms/notificationCommands.xml.tmp $(CURDIR)/debian/opennms/etc/opennms/notificationCommands.xml

	# Get the shared libs dependencies -- not needed
	#dpkg-shlibdeps debian/opennms/usr/lib/iplike.so.* debian/opennms/usr/lib/libjicmp.so.* debian/opennms/usr/lib/libjrrd.so.*
	# Fix permissions and ownership
	chgrp -R nogroup $(CURDIR)/debian/opennms/etc/opennms $(CURDIR)/debian/opennms/var/lib/opennms/* $(CURDIR)/debian/opennms/var/log/opennms
	chmod 2775 $(CURDIR)/debian/opennms/etc/opennms $(CURDIR)/debian/opennms/var/lib/opennms/* $(CURDIR)/debian/opennms/var/log/opennms
	chmod 644 $(CURDIR)/debian/opennms/usr/share/opennms/lib/*.jar
	chmod 664 $(CURDIR)/debian/opennms/etc/opennms/*
	chmod 660 $(CURDIR)/debian/opennms/etc/opennms/users.xml $(CURDIR)/debian/opennms/etc/opennms/groups.xml $(CURDIR)/debian/opennms/etc/opennms/snmp-config.xml $(CURDIR)/debian/opennms/etc/opennms/opennms-database.xml $(CURDIR)/debian/opennms/etc/opennms/magic-users.properties $(CURDIR)/debian/opennms/etc/opennms/vulnscand-configuration.xml
	chmod 755 $(CURDIR)/debian/opennms/usr/share/opennms/bin/install.pl


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
#	dh_installdebconf	
	dh_installdocs
	dh_installexamples
	dh_installmenu
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
	dh_installinit -n
	dh_installcron
	dh_installman
	dh_installinfo
#	dh_undocumented
	dh_installchangelogs 
	dh_link
	dh_strip
	dh_compress
#	dh_fixperms	# this is a little scary for my tastes right now
#	dh_makeshlibs
	dh_installdeb
#	dh_perl
#	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
