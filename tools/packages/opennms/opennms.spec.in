Name:			@ant.project.name@
Summary:		Enterprise-level network management platform
Serial:			1
Release:		%release_pkg
Version:		%version
Copyright:		LGPL/GPL
Group:			Applications/System

Source:			%{name}-source-%{version}-%{release}.tar.gz
URL:			ftp://opennms.org/pub/releases/OpenNMS/
BuildRoot:		%{_tmppath}/%{name}-%{version}-root

AutoReqProv:		no

Requires:		rrdtool, curl, %{requires}

%description
OpenNMS is a network management package.
This is the 1.0 stable tree.

%if "%builddocs" == "1"
%package docs
Summary:	Documentation for the OpenNMS network management platform
Group:		Applications/System

%description docs
This package contains the API and user documentation
for OpenNMS.
%endif

%package webapp
Summary:	Web interface servlet for the OpenNMS network management platform
Group:		Applications/System
Requires:	rrdtool, %{name} = 1:%{version}-%{release}, %{webapp_requires}

%description webapp
The web UI for OpenNMS.

%prep

%if %{standalone}
tar -xvzf $RPM_SOURCE_DIR/%{name}-source-%{version}-%{release}.tar.gz -C $RPM_BUILD_DIR
%define setupdir %{packagedir}/source
%else
%define setupdir @root.source@
%endif

%setup -D -T -n %setupdir

##############################################################################
# building
##############################################################################

%build
rm -rf $RPM_BUILD_ROOT

# nothing necessary

##############################################################################
# installation
##############################################################################

%install

if [ x"%{buildtests}" = x"1" ]; then
	EXTRA_TARGETS="$EXTRA_TARGETS test"
fi
if [ x"%{builddocs}" = x"1" ]; then
	EXTRA_TARGETS="$EXTRA_TARGETS docs"
fi

echo "=== RUNNING INSTALL ==="
sh ./build.sh $COMPILER_FLAG -Dinstall.prefix=$RPM_BUILD_ROOT \
    -Dinstall.dir=%{instprefix} -Dinstall.init.dir=%{initdir}/init.d \
    -Dinstall.webapps.dir=%{webappsdir} \
    -Dinstall.servlet.dir=%{servletdir} \
    -Dinstall.share.dir=%{sharedir} -Dinstall.postgresql.dir=%{pglibdir} \
    -Dinstall.postgresql.service=%{psql_service} \
    -Dinstall.logs.dir=%{logdir} -Dinstall.pid.file=%{pidfile} \
    -Dfilter.overwrite="yes" -Disrpm="true" \
    $EXTRA_TARGETS install || exit $?
echo "=== INSTALL COMPLETED ==="

mkdir -p $RPM_BUILD_ROOT%{instprefix}
mkdir -p $RPM_BUILD_ROOT%{instprefix}/etc
mkdir -p $RPM_BUILD_ROOT%{instprefix}/contrib

mkdir -p $RPM_BUILD_ROOT%{_bindir}
cat > $RPM_BUILD_ROOT%{_bindir}/opennms <<EOF
#!/bin/sh -

exec %{instprefix}/bin/opennms.sh "$@"
EOF

### XXX is this needed?  (Most of) the current scripts don't use OPENNMS_HOME.
### /etc/profile.d

mkdir -p $RPM_BUILD_ROOT%{profiledir}
cat > $RPM_BUILD_ROOT%{profiledir}/%{name}.sh << END
#!/bin/bash

OPENNMS_HOME=%{instprefix}
if ! echo "\$PATH" | grep "\$OPENNMS_HOME/bin" >/dev/null 2>&1; then
	PATH="\$PATH:\$OPENNMS_HOME/bin"
fi

export OPENNMS_HOME PATH

END

%if "%builddocs" == "1"
### /usr/share/doc/%{name}-%{version}

mkdir -p $RPM_BUILD_ROOT%{_docdir}/%{name}-%{version}
cp -pr work/docs/* $RPM_BUILD_ROOT%{_docdir}/%{name}-%{version}/
rm -rf $RPM_BUILD_ROOT%{instprefix}/docs
ln -sf %{_docdir}/%{name}-%{version} $RPM_BUILD_ROOT%{instprefix}/docs
cp CHANGELOG README* $RPM_BUILD_ROOT%{instprefix}/etc/
rm -rf $RPM_BUILD_ROOT%{instprefix}/etc/README
rm -rf $RPM_BUILD_ROOT%{instprefix}/etc/README.build
%endif

### symlinks for system dirs to %{instprefix}

ln -sf %{logdir} $RPM_BUILD_ROOT%{instprefix}/logs
ln -sf %{sharedir} $RPM_BUILD_ROOT%{instprefix}/share

### ${tomcatdir}

mkdir -p $RPM_BUILD_ROOT%{tomcatdir}/server/lib
jars="`echo \"%{tomcatserverlibs}\" | sed 's/:/ /g'`"
for jar in $jars; do
	ln -sf %{instprefix}/lib/$jar \
	    $RPM_BUILD_ROOT%{tomcatdir}/server/lib/$jar
done

mkdir -p $RPM_BUILD_ROOT%{servletdir}/WEB-INF/classes
ln -sf %{instprefix}/etc/log4j.properties $RPM_BUILD_ROOT%{servletdir}/WEB-INF/classes

pushd $RPM_BUILD_ROOT
find $RPM_BUILD_ROOT%{instprefix}/etc ! -type d | \
    sed -e "s,^$RPM_BUILD_ROOT,%config(noreplace) ," | \
    sort > %{_tmppath}/files.etc

(find $RPM_BUILD_ROOT%{webappsdir} ! -type d ; find $RPM_BUILD_ROOT%{servletdir} ! -type d ) | \
    sed -e "s,^$RPM_BUILD_ROOT,," | grep -v '/WEB-INF/web.xml' | \
    sort > %{_tmppath}/files.webapp
popd

%clean
rm -rf $RPM_BUILD_ROOT

##############################################################################
# file setup
##############################################################################

%files -f %{_tmppath}/files.etc
%defattr(664 root root 775)
%attr(755,root,root)	%{initdir}/init.d/*
%attr(755,root,root)	%{profiledir}/%{name}.sh
%attr(755,root,root)	%{_bindir}/*
%attr(755,root,root)	%{instprefix}/bin
%dir			%{instprefix}/etc
			%{instprefix}/contrib
%if "%builddocs" == "1"
%attr(755,root,root)	%{instprefix}/docs
%endif
%attr(755,root,root)	%{instprefix}/lib
			%{instprefix}/logs
			%{instprefix}/share
			%{sharedir}
			%{logdir}

%if "%builddocs" == "1"
%files docs
%defattr(644 root root 755)
%{_docdir}/%{name}-%{version}
%endif

%files webapp -f %{_tmppath}/files.webapp
%defattr(644 root root 755)
%{tomcatdir}/server
%config %{servletdir}/WEB-INF/web.xml

%pre

%post

echo -e "- executing runjava to choose a Java Runtime Environment... \c"
%{instprefix}/bin/runjava -q -s
if [ $? -ne 0 ]; then
    echo "A suitable Java Runtime Environment could not be found." >&2
    echo "Please set and export the JAVA_HOME environment variable to" >&2
    echo "point where your JDK is installed." >&2
    exit 1
fi
echo "done"

echo -e "- moving *.sql.rpmnew files (if any)... \c"
if [ `ls %{instprefix}/etc/*.sql.rpmnew 2>/dev/null | wc -l` -gt 0 ]; then
	for i in %{instprefix}/etc/*.sql.rpmnew; do
		mv $i ${i%%%%.rpmnew}
	done
fi
echo "done"

echo -e "- running the installer... \c"
%{instprefix}/bin/install -r -disU >> %{logdir}/install.log 2>&1
if [ $? -ne 0 ]; then
    echo "Error running installer, see %{logdir}/install.log for details." >&2
    exit 1
fi
echo "done"


# add the OpenNMS init

if [ -x /sbin/chkconfig ]; then
    chkconfig="/sbin/chkconfig"
elif [ -x "`which chkconfig 2>&1`" ]; then
    chkconfig="`which chkconfig 2>&1`"
else
    chkconfig=""
fi

echo -e "- adding OpenNMS init script using 'chkconfig'... \c"
if [ -n "$chkconfig" ]; then
    if $chkconfig --add opennms > /dev/null; then 
       echo "done"
    else
       echo "Warn: Couldn't add OpenNMS to init scripts." >&2
       echo "      To make OpenNMS startup automatically," >&2
       echo "      resolve these errors.  Consult the chkconfig" >&2
       echo "      man pages.  If you are using insserv, this maybe" >&2
       echo "      a postgresql dependency problem." >&2
    fi
else
    echo "Warn: Couldn't find the chkconfig script to configure" >&2
    echo "      OpenNMS to start automatically.  You'll need to" >&2
    echo "      configure this your self." >&2
fi

echo -e "- checking for old update files... \c"

JAR_UPDATES=`find %{instprefix}/lib/updates -name \*.jar   -exec rm -rf {} \; -print 2>/dev/null | wc -l`
CLASS_UPDATES=`find %{instprefix}/lib/updates -name \*.class -exec rm -rf {} \; -print 2>/dev/null | wc -l`
let TOTAL_UPDATES=`expr $JAR_UPDATES + $CLASS_UPDATES`
if [ "$TOTAL_UPDATES" -gt 0 ]; then
	echo "FOUND"
	echo ""
	echo "WARNING: $TOTAL_UPDATES old update files were found in your"
	echo "%{instprefix}/lib/updates directory.  They have been deleted"
	echo "because they should now be out of date."
	echo ""
else
	echo "done"
fi

%preun

if [ $1 != 0 ]; then
    # Do nothing
    exit 0
fi

echo "- Stopping OpenNMS... "
%{initdir}/init.d/opennms stop
echo "- Stopping OpenNMS... done"

echo -e "- adding OpenNMS init script using 'chkconfig'... \c"
if [ -x /sbin/chkconfig ]; then
    /sbin/chkconfig --del opennms > /dev/null
else
    if [ -x `which chkconfig 2>&1` ]; then
	`which chkconfig` --del opennms > /dev/null
    fi
fi
echo "done"

%pre webapp

echo -e "- executing runjava to check the Java Runtime Environment... \c"
%{instprefix}/bin/runjava -c || exit 1
echo "done"

echo -e "- clearing out the Tomcat work directory... \c"
rm -rf %{tomcatdir}/work/* >/dev/null 2>&1 || :
echo "done"

%post webapp

echo -e "- executing the installer for the webapp... \c"
echo "done"

