    </activation>

    <properties>
      <platform>linux</platform>
      <platform.shlib>so</platform.shlib>
      <platform.jni>so</platform.jni>
      <install.dir>/usr/local/openNMS</install.dir>
      <build.rrd.include.dir>/usr/local/rrdtool-1.2.12/include</build.rrd.include.dir>
