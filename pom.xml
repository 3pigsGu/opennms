    <properties>
      <build.postgresql.include.dir>/usr/include/postgresql/server</build.postgresql.include.dir>
    </properties>
  </profile>

     <profile>
    <id>slackware</id>
    <activation>
      <file>
        <exists>/etc/slackware-version</exists>
