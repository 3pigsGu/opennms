<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
  <bean id="eventConfDaoFile" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="staticMethod"><value>org.opennms.test.ConfigurationTestUtils.getFileForResource</value></property>
    <property name="arguments">
      <list>
        <null/>
        <value>/etc/eventconf.xml</value>
      </list>
    </property>
  </bean>
  
  <bean id="eventConfDao" class="org.opennms.netmgt.config.DefaultEventConfDao" init-method="reload">
    <constructor-arg><ref local="eventConfDaoFile"/></constructor-arg>
  </bean>
</beans>
