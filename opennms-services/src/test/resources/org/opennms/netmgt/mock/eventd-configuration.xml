<!-- 
  The ports are changed from their default because tests will fail if OpenNMS 
  is running on the same node.
 -->
<EventdConfiguration
   TCPPort="5837"
   UDPPort="5837"
   receivers="5"
   getNextEventID="select nextVal('eventsNxtId')"
   getNextAlarmID="select nextVal('alarmsNxtId')"
   socketSoTimeoutRequired="yes"
   socketSoTimeoutPeriod="3000"/>
<!--
  Alternatively, for HSQL, we could use these:
    getNextEventID="SELECT max(eventId)+1 from events"
    getNextAlarmID="SELECT max(alarmId)+1 from alarms"
  -->