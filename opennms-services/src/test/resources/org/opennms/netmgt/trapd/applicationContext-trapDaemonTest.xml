<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

  <bean id="trapdIpMgr" class="org.opennms.netmgt.trapd.MockTrapdIpMgr"/>
  
  <bean id="newSuspectOnTrap" class="java.lang.Boolean">
    <constructor-arg><value>true</value></constructor-arg>
  </bean>
  
  <bean id="snmpTrapPort" class="java.lang.Integer">
    <constructor-arg><value>10000</value></constructor-arg>
  </bean>
  
  <bean id="eventConfDaoFile" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="staticMethod"><value>org.opennms.test.ConfigurationTestUtils.getFileForResource</value></property>
    <property name="arguments">
      <list>
        <bean class="org.opennms.netmgt.xml.event.Event"/>
        <value>/org/opennms/netmgt/trapd/eventconf.xml</value>
      </list>
    </property>
  </bean>
  
  <bean id="eventConfDao" class="org.opennms.netmgt.config.DefaultEventConfDao" init-method="reload">
    <constructor-arg><ref local="eventConfDaoFile"/></constructor-arg>
  </bean>

  <!--  Make the tx:annotation-driven element in applicationContext-trapDaemon happy -->
  <bean id="transactionManager" class="org.opennms.netmgt.mock.MockPlatformTransactionManager"/>
</beans>
