<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    
  <bean id="locationMonitorConfigResource" class="org.springframework.beans.factory.config.ResourceFactoryBean">
    <property name="location" value="classpath:/org/opennms/netmgt/poller/remote/monitoring-locations.xml"/>
  </bean>
  
  <bean id="pollerConfigDao" class="org.opennms.netmgt.config.DefaultPollerConfigDao">
    <property name="configResource" value="classpath:/org/opennms/netmgt/poller/remote/poller-configuration.xml"/>
    <property name="localServer" value="nms1"/>
    <property name="verifyServer" value="false"/>
  </bean>

  <bean id="pollerConfig" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="targetObject" ref="pollerConfigDao"/>
    <property name="targetMethod" value="getPollerConfig"/>
  </bean>
  
  <bean id="setupIpLike" class="java.lang.Boolean">
    <constructor-arg><value>true</value></constructor-arg>
  </bean>
</beans>
