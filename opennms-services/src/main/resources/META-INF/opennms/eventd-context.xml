<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="eventdConfigFactory-init" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean" >
    <property name="staticMethod" value="org.opennms.netmgt.config.EventdConfigFactory.init" />
  </bean>
  
  <bean id="eventdConfigManager" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean" depends-on="eventdConfigFactory-init">
    <property name="staticMethod" value="org.opennms.netmgt.config.EventdConfigFactory.getInstance" />
  </bean>
  
  <bean id="eventIpcManager" class="org.opennms.netmgt.eventd.EventIpcManagerDefaultImpl">
    <constructor-arg ref="eventdConfigManager"/>
  </bean>
  
  <bean id="eventIpcManagerFactory-init" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean" >
    <property name="staticMethod" value="org.opennms.netmgt.eventd.EventIpcManagerFactory.setIpcManager" />
    <property name="arguments">
      <list><ref bean="eventIpcManager"/></list>
    </property>
  </bean>
  
  <bean id="eventConfigurationManager-init" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean" >
    <property name="staticMethod" value="org.opennms.netmgt.eventd.EventConfigurationManager.init" />
  </bean>
  
  <bean name="eventd" class="org.opennms.netmgt.eventd.Eventd" depends-on="eventConfigurationManager-init, eventIpcManagerFactory-init" >
    <property name="eventIpcManager" ref="eventIpcManager" />
    <property name="configManager" ref="eventdConfigManager" />
    <property name="eventDao" ref="eventDao"/>
    <property name="dataSource" ref="dataSource" />
  </bean>

</beans>