<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="actiondConfigFactory-reload" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean" >
    <property name="staticMethod" value="org.opennms.netmgt.config.ActiondConfigFactory.reload" />
  </bean>
  
  <bean id="actiondConfigFactory" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean" depends-on="actiondConfigFactory-reload">
    <property name="staticMethod" value="org.opennms.netmgt.config.ActiondConfigFactory.getInstance" />
  </bean>
        
  <bean id="actiond" class="org.opennms.netmgt.actiond.Actiond" >
    <property name="actiondConfig" ref="actiondConfigFactory" />
  </bean>
  

</beans>