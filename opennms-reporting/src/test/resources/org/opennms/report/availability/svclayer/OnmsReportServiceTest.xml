<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  	<bean id="onmsReportService"
		class="org.opennms.report.availability.svclayer.OnmsReportService"
		scope="prototype">
		<property name="configDao" ref="onmsDatabaseReportConfigDao" /> 
		<property name="calendarCalculator">
			<ref local="mockCalendarCalculator" />
		</property>
		<property name="classicCalculator">
			<ref local="mockClassicCalculator" />
		</property>
	</bean>
  
  <bean id="mockConfigDao" class="org.easymock.EasyMock" factory-method="createStrictMock">
	<constructor-arg value="org.opennms.netmgt.dao.OnmsDatabaseReportConfigDao"/>
  </bean>
  
  <bean id="mockCalendarCalculator" class="org.easymock.EasyMock" factory-method="createStrictMock">
	<constructor-arg value="org.opennms.report.availability.AvailabilityCalculator"/>
  </bean>
  
  <bean id="mockClassicCalculator" class="org.easymock.EasyMock" factory-method="createStrictMock">
	<constructor-arg value="org.opennms.report.availability.AvailabilityCalculator"/>
  </bean>
  
</beans>