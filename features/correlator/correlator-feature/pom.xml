<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.opennms.features</groupId>
        <artifactId>correlator</artifactId>
        <version>16.0.0-SNAPSHOT</version>
    </parent>
    <groupId>org.opennms.features.correlator</groupId>
    <artifactId>correlator-feature</artifactId>
    <packaging>pom</packaging>
    <name>OpenNMS :: Features :: Correlator :: Feature</name>
    <properties>
        <droolsVersion>6.2.0.Final</droolsVersion>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.opennms.maven.plugins</groupId>
                <artifactId>features-maven-plugin</artifactId>
                <configuration>
                    <bundles>
                        <bundle>mvn:com.google.protobuf/protobuf-java/2.6.1</bundle>
                        <bundle>wrap:mvn:javax.inject/javax.inject/1</bundle>
                        <bundle>mvn:org.mvel/mvel2/2.2.4.Final</bundle>
                        <bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.antlr-runtime/3.5.2_1</bundle>
                        <bundle>wrap:mvn:org.kie/kie-internal/${droolsVersion}</bundle>
                        <bundle>wrap:mvn:org.kie/kie-api/${droolsVersion}</bundle>
                        <bundle>mvn:org.drools/drools-core/${droolsVersion}</bundle>
                        <bundle>mvn:org.drools/drools-compiler/${droolsVersion}</bundle>
                        <bundle>mvn:org.drools/drools-osgi-integration/${droolsVersion}</bundle>
                    </bundles>
                    <features>
                        <feature>camel-xstream</feature>
                        <feature>cxf-xjc-runtime</feature>
                    </features>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    <dependencies>
        <!-- OpenNMS dependencies -->
        <dependency>
            <groupId>org.opennms.features.correlator</groupId>
            <artifactId>correlator-core</artifactId>
        </dependency>
        
        <!-- Testing -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
