<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:opennms="urn:import:org.opennms.features.gwt.graph.resource.list.client.view">
	<ui:style>
		.m_hPanel{
		  border: none;
		}
		
		.m_vPanel{
		  border: none;
		  width: 100%;
		  border-style: none;
		}
	</ui:style>
	<g:LayoutPanel ui:field="m_layoutPanel">
	   <g:layer top="0" right="0" left="0" bottom="110px">
	       <opennms:ResourceTable ui:field="m_resourceTable"/>
	   </g:layer>
	   <g:layer top="390px" left="0" right="55px" height="23px">
	       <g:FlowPanel ui:field="m_simplePagerContainer"/>
	   </g:layer>
	   <g:layer top="390px" width="55px" right="0" height="23px">
	       <g:Button ui:field="m_searchBtn">Search</g:Button>
	   </g:layer>
	   <g:layer top="420px" bottom="0">
            <g:VerticalPanel ui:field="m_vPanel" styleName="{style.m_vPanel}">
                <g:Button ui:field="m_chooseChildResourceBtn">Choose Child Resource</g:Button>
                <g:Button ui:field="m_viewChildResourceBtn">View Child Resource</g:Button>
            </g:VerticalPanel>
	   </g:layer>
	</g:LayoutPanel>
		
</ui:UiBinder> 