<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Test for DAOs against local-reports.xml -->
    <bean id="legacyLocalReportsDao" class="org.opennms.features.reporting.dao.LegacyLocalReportsDao">
        <property name="configResource" value="file:src/test/resources/etc/local-reports.xml" />
    </bean>

    <bean id="LegacyLocalReportsDaoTest" class="org.opennms.features.reporting.dao.LegacyLocalReportsDaoTest">
        <property name="legacyLocalReportsDao" ref="legacyLocalReportsDao" />
    </bean>

    <!-- Test for DAOs against local-jasper-reports.xml -->
    <bean id="legacyLocalJasperReportsDao" class="org.opennms.features.reporting.dao.jasper.LegacyLocalJasperReportsDao">
        <property name="configResource" value="file:src/test/resources/etc/local-jasper-reports.xml" />
        <property name="jasperReportResources" value="file:src/test/resources/etc/report-templates" />
    </bean>

    <bean id="LegacyLocalJasperReportsDaoTest" class="org.opennms.features.reporting.dao.jasper.LegacyLocalJasperReportsDaoTest">
        <property name="legacyLocalJasperReportsDao" ref="legacyLocalJasperReportsDao" />
    </bean>

</beans>