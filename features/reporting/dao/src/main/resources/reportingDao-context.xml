<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DAO for local-reports.xml -->
    <bean id="legacyLocalReportsDao" class="org.opennms.features.reporting.dao.LegacyLocalReportsDao">
        <property name="configResource" value="file:${opennms.home}/etc/local-reports.xml" />
    </bean>

    <!-- DAO for local-jasper-reports.xml -->
    <bean id="legacyLocalJasperReportsDao" class="org.opennms.features.reporting.dao.jasper.LegacyLocalJasperReportsDao">
        <property name="configResource" value="file:${opennms.home}/etc/local-jasper-reports.xml" />
        <property name="jasperReportResources" value="file:${opennms.home}/etc/report-templates" />
    </bean>

    <!-- DAO for remote-repository.xml -->
    <bean id="defaultRemoteRepositoryConfigDao" class="org.opennms.features.reporting.dao.remoterepository.DefaultRemoteRepositoryConfigDao">
        <property name="configResource" value="file:${opennms.home}/etc/remote-repository.xml" />
    </bean>
</beans>