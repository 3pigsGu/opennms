<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DAO for XML configuration -->
    <bean id="localReportsDao" class="org.opennms.features.reporting.dao.LegacyLocalReportsDao">
        <property name="configResource" value="file:${opennms.home}/etc/local-reports.xml" />
    </bean>

    <bean id="localJasperReportsDao" class="org.opennms.features.reporting.dao.jasper.LegacyLocalJasperReportsDao">
        <property name="configResource" value="file:${opennms.home}/etc/local-jasper-reports.xml" />
        <property name="jrTemplateResource" value="file:${opennms.home}/etc/report-templates" />
    </bean>
    
    <bean id="localReportRepository" class="org.opennms.features.reporting.repository.local.LegacyLocalReportRepository">
        <property name="localReportsDao" ref="localReportsDao" />
        <property name="localJasperReportsDao" ref="localJasperReportsDao" />
    </bean>
</beans>