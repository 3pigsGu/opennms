<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Configuration file resource URL -->
    <bean id="localReportsResource" class="org.springframework.core.io.UrlResource">
        <constructor-arg value="file:${opennms.home}/etc/local-reports.xml"/>
    </bean>

    <bean id="localJasperReportsResource" class="org.springframework.core.io.UrlResource">
        <constructor-arg value="file:${opennms.home}/etc/local-jasper-reports.xml"/>
    </bean>

    <bean id="jrTemplateResource" class="org.springframework.core.io.UrlResource">
        <constructor-arg value="file:${opennms.home}/etc/report-templates"/>
    </bean>

    <bean id="remoteRepositoryResource" class="org.springframework.core.io.UrlResource">
        <constructor-arg value="file:${opennms.home}/etc/remote-repository.xml"/>
    </bean>

    <!-- DAO for XML configuration -->
    <bean id="localReportsDao" class="org.opennms.features.reporting.dao.LegacyLocalReportsDao"/>

    <bean id="localJasperReportsDao" class="org.opennms.features.reporting.dao.jasper.LegacyLocalJasperReportsDao"/>
</beans>