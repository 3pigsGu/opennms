<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:me='urn:import:org.opennms.features.poller.remote.gwt.client'>
  
  <ui:style>
    .topLevelContainer{
        position: relative;
    }
  
  </ui:style>
  
  <g:FlowPanel styleName="{style.topLevelContainer}">
    <g:FlowPanel>
        <g:HTMLPanel ui:field="filterOptionsPanel">
        <me:FilterPanel ui:field="filterPanel"/>
        <hr/>
        <me:TagPanel ui:field="tagPanel"/>
        <hr/>
        </g:HTMLPanel>
    </g:FlowPanel>
    <g:FlowPanel ui:field="listsPanel" >
      <me:PageableApplicationList ui:field="applicationList"/>
      <me:PageableLocationList ui:field="locationList"/>
    </g:FlowPanel>
  </g:FlowPanel>
  

</ui:UiBinder>