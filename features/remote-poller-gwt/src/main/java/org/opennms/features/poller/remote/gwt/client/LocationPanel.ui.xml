<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:me='urn:import:org.opennms.features.poller.remote.gwt.client'>
  
  <ui:style>
  
    .scrollPanel{
  	    width: 100%;
  	 }
  	 
  	 .flexTable{
  	     width: 100%;
  	     min-width: 200px;
         border-collapse: collapse;	
  	 }
  
  </ui:style>

  <ui:style field='selectionStyle' type='org.opennms.features.poller.remote.gwt.client.LocationPanel.SelectionStyle'>
    .selectedRow {
        border-width: 1px;
        border-style: inset;
        border-color: #90a5d3;
        opacity: .5;
        filter:literal("alpha(opacity=50)");
    }

    .alternateRow{
        background-color: #c8e1fe;
    }
    
    .flexTableHeader{
        font-weight: bold;
        cursor: pointer;	
    }
    
    .sortSelected{
        background-color: gray;
        background-image: url( "images/sort_desc.gif" ) ;
        background-position: 10px right 40% top ;
        background-repeat: no-repeat;	
    }
    
  </ui:style>

  <g:ScrollPanel styleName="{style.scrollPanel}">
    <g:FlexTable ui:field='m_locations' styleName="{style.flexTable}" />
  </g:ScrollPanel>

</ui:UiBinder>