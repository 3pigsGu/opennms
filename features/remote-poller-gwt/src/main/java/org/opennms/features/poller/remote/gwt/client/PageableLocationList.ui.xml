<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	       
		.controlLayoutStyle{
		      width: 100%;	
		}
		
		.nextBtnLayoutStyle{
			position: absolute;
			right: 0px;
			bottom: 0px;
		}
		
		.prevBtnLayoutStyle{
			position: absolute;
            left: 0px;
            bottom: 0px;
		}
		
		.labelLayoutStyle{
			position: absolute;
			left: 40%;
			bottom: 5px;
		}
		
		.tableStyle{
		    width: 100%;	
		}
		
	</ui:style>
	
	<ui:style field="locationDetailStyle" type="org.opennms.features.poller.remote.gwt.client.PageableLocationList.LocationDetailStyle">
	   
	   .detailContainerStyle{
	   	   position: relative;
	   	   height: 60px;
	   	}
	   
	   .iconStyle{
	   	   position: absolute;
	   	   left: 0px;
	   	}
	   
	   .nameStyle{
	   	   position: absolute;
	   	   left: 32px;
	   }
	   	
	   .areaStyle{
	   		position: absolute;
            right: 10px;
	   }
	   	
	   .statusStyle{
	   		position: absolute;
	   		top: 20px;
	   		left: 32px;
	   		right: 0px;
	   }
	   
	   .upStatus{
	        background-color: #00ff00;
	    }
	    
	    .downStatus{
	        background-color: #ff0000;
	        color: #ffffff;
	    }
	    
	    .marginalStatus{
	        background-color: #ffff00;
	    }
	    
	    .unknownStatus{
	        background-color: #0000ff;
	    }
	</ui:style>
	
	   <g:FlowPanel width="100%" height="100%">
	       <g:FlexTable ui:field="dataList" width="100%"/>
	       <g:FlowPanel ui:field="pagingControls" >
	           <g:Button ui:field="nextBtn" text="next" styleName="{style.nextBtnLayoutStyle}"/>
	           <g:Label ui:field="pageStatsLabel" styleName="{style.labelLayoutStyle}"/>
	           <g:Button ui:field="prevBtn" text="prev" styleName="{style.prevBtnLayoutStyle}"/>
	       </g:FlowPanel>
	   </g:FlowPanel>
</ui:UiBinder> 