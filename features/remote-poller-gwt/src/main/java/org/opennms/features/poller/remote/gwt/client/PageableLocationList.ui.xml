<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	       
		.controlLayoutStyle{
		      width: 100%;	
		}
		
		.nextBtnLayoutStyle{
			position: absolute;
			right: 0px;
			bottom: 0px;
		}
		
		.prevBtnLayoutStyle{
			position: absolute;
            left: 0px;
            bottom: 0px;
		}
		
		.labelLayoutStyle{
			position: absolute;
			left: 40%;
			bottom: 5px;
		}
		
		.tableContainer{
		    overflow-y: scroll;
		}
		
	</ui:style>
	
	<ui:style field="locationDetailStyle" type="org.opennms.features.poller.remote.gwt.client.PageableLocationList.LocationDetailStyle">
	   
	   .detailContainerStyle{
	   	   position: relative;
	   	   height: 60px;
	   	}
	   
	   .iconStyle{
	   	   position: absolute;
	   	   left: 0px;
	   	}
	   
	   .nameStyle{
	   	   position: absolute;
	   	   left: 32px;
	   }
	   	
	   .areaStyle{
	   		position: absolute;
            right: 10px;
	   }
	   	
	   .statusStyle{
	   		position: absolute;
	   		top: 20px;
	   		left: 32px;
	   		right: 0px;
	   }
	   
	   .upStatus{
	        background-color: #00ff00;
	    }
	    
	    .downStatus{
	        background-color: #ff0000;
	        color: #ffffff;
	    }
	    
	    .marginalStatus{
	        background-color: #ffff00;
	    }
	    
	    .unknownStatus{
	        background-color: #0000ff;
	    }
	</ui:style>
	   <g:DockLayoutPanel height="100%" width="100%" unit="PX">
           <g:center>
             <g:FlowPanel styleName="{style.tableContainer}">
                <g:FlexTable ui:field="dataList" width="100%" />
             </g:FlowPanel>
           </g:center>
           <g:south size="26">
             <g:FlowPanel ui:field="pagingControls" >
               <g:FlowPanel styleName="{style.nextBtnLayoutStyle}">
                   <g:Button ui:field="nextBtn" text="next" />
               </g:FlowPanel>
               <g:Label ui:field="pageStatsLabel" styleName="{style.labelLayoutStyle}"/>
               <g:FlowPanel styleName="{style.prevBtnLayoutStyle}">
                   <g:Button ui:field="prevBtn" text="prev" />
               </g:FlowPanel>
             </g:FlowPanel>
           </g:south>
	   </g:DockLayoutPanel>
</ui:UiBinder> 