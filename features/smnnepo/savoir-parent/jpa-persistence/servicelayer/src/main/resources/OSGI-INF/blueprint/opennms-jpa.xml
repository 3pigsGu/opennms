<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.1.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.1.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <!-- Proveedor -->
    <bean id="proveedorDAO" class="net.latinus.sinardap.jpa.dao.jpa.ProveedorDAOImpl">
        <tx:transaction method="*" value="NotSupported"/>
        <jpa:context property="entityManager" unitname="incop-jpa"/>
    </bean>

    <reference id="jta" interface="javax.sql.DataSource"
               filter="(opennmsTX=true)" availability="mandatory"/>

    <reference id="nonJTA" interface="javax.sql.DataSource"
               filter="(opennmsTX=false)" availability="mandatory"/>

</blueprint>