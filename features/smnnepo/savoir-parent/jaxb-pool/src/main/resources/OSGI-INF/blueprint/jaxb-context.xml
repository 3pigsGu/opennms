<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
        >

    <cm:property-placeholder persistent-id="org.opennms.jaxb.pool" id="jaxb-pool" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="jaxb.class.packages" value=""/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="globalContext" class="org.opennms.jaxb.pool.JaxbEngineProvider">
        <argument value="${jaxb.class.packages}"/>
    </bean>

    <service ref="globalContext" interface="org.opennms.jaxb.pool.JaxbEngine"/>

</blueprint>