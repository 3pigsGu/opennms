<features xmlns="http://karaf.apache.org/xmlns/features/v1.0.0" name="opennms-all">    
    <!-- camel features -->
    <repository>mvn:org.apache.camel.karaf/apache-camel/2.10.4/xml/features</repository>
    
    <!--  activemq features -->
    <repository>mvn:org.apache.activemq/activemq-karaf/5.7.0/xml/features</repository>
    
    <feature name="snmp" description="OpenNMS SNMP" version="1.13.0-SNAPSHOT">
      <bundle>mvn:org.opennms.core.snmp/org.opennms.core.snmp.api/1.13.0-SNAPSHOT</bundle>
      <bundle>mvn:org.opennms.core.snmp/org.opennms.core.snmp.commands/1.13.0-SNAPSHOT</bundle>
      <bundle>mvn:org.opennms.core.snmp/org.opennms.core.snmp.implementations.snmp4j/1.13.0-SNAPSHOT</bundle>
    </feature>
    
    <feature name="distributed-api" description="OpenNMS Distributed API" version="1.0-SNAPSHOT">
      <bundle>mvn:org.opennms.distributed/distributed-api/1.0-SNAPSHOT</bundle>
    </feature>
    
    <feature name="collector-snmp" description="OpenNMS Distributed Collector :: SNMP" version="1.0-SNAPSHOT">
      <feature>distributed-api</feature>
      <feature>snmp</feature>
      <bundle>mvn:org.opennms.distributed/configuration-snmp/1.0-SNAPSHOT</bundle>
      <bundle>mvn:org.opennms.distributed/collector-snmp/1.0-SNAPSHOT</bundle>
    </feature>
    
    <feature name="cassandra-driver" description="OpenNMS Distributed Cassandra Driver" version="1.0-SNAPSHOT">
      <bundle>mvn:commons-cli/commons-cli/1.2</bundle>
      <bundle>mvn:commons-lang/commons-lang/2.4</bundle>
      <bundle>mvn:joda-time/joda-time/2.2</bundle>
      <bundle>mvn:org.xerial.snappy/snappy-java/1.0.4.1</bundle>
      <bundle>mvn:org.opennms.distributed/cassandra-driver/1.0.0-beta1</bundle>
    </feature>

    <feature name="persistence-cassandra" description="OpenNMS Distributed Persistence :: Cassandra" version="1.0-SNAPSHOT">
      <feature>distributed-api</feature>
      <feature>cassandra-driver</feature>
      <bundle>mvn:org.opennms.distributed/persistence-cassandra/1.0-SNAPSHOT</bundle>
    </feature>

    <feature name="persistence-jrrd" description="OpenNMS Distributed Persistence :: Jrrd" version="1.0-SNAPSHOT">
      <feature>distributed-api</feature>
      <bundle>mvn:org.opennms.distributed/persistence-jrrd/1.0-SNAPSHOT</bundle>
      <bundle>mvn:org.jrobin/jrobin/1.5.15-SNAPSHOT</bundle>
    </feature>
    
    <feature name="distributed-standalone" description="OpenNMS Distributed Standalone Routes">
      <configfile finalname="/etc/routes-standalone.xml">mvn:org.opennms.distributed/routes/1.0-SNAPSHOT/xml/standalone</configfile>
      <feature>collector-snmp</feature>
      <feature>persistence-cassandra</feature>
      <feature>camel-blueprint</feature>
      <bundle>blueprint:file:etc/routes-standalone.xml</bundle>
    </feature>
    
    <feature name="distributed-persister" description="OpenNMS Distributed Persister">
      <configfile finalname="/etc/routes-persister.xml">mvn:org.opennms.distributed/routes/1.0-SNAPSHOT/xml/persister</configfile>
      <feature>persistence-cassandra</feature>
      <feature>camel-blueprint</feature>
      <feature>activemq-camel</feature>
      <bundle>blueprint:file:etc/routes-persister.xml</bundle>
    </feature>

    <feature name="distributed-persister-jrrd" description="OpenNMS Distributed Persister (JRobin)">
      <configfile finalname="/etc/routes-persister.xml">mvn:org.opennms.distributed/routes/1.0-SNAPSHOT/xml/persister</configfile>
      <feature>persistence-jrrd</feature>
      <feature>camel-blueprint</feature>
      <feature>activemq-camel</feature>
      <bundle>blueprint:file:etc/routes-persister.xml</bundle>
    </feature>
    
    <feature name="distributed-collector" description="OpenNMS Distributed Collector">
      <configfile finalname="/etc/routes-collector.xml">mvn:org.opennms.distributed/routes/1.0-SNAPSHOT/xml/collector</configfile>
      <feature>collector-snmp</feature>
      <feature>camel-blueprint</feature>
      <feature>activemq-camel</feature>
      <bundle>blueprint:file:etc/routes-collector.xml</bundle>
    </feature>
    
</features>
