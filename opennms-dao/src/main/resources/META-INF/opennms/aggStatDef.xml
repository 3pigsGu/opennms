<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap 
          PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
          "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="AggStatDef">
	<typeAlias alias ="aggStatDef" type="org.opennms.netmgt.model.AggregateStatusDefinition" />
	
	<resultMap class="aggStatDef" id="result">
		<result property="id" column="id"/>
		<result property="name" column="name"/>
	</resultMap>
	
	<select id="getAll" resultMap="result">
		select * from aggregate_status_definitions
	</select>

	<select id="getByID" resultMap="result">
		select * from aggregate_status_definitions where id=#value#
	</select>

	<select id="getByName" resultMap="result">
		select * from aggregate_status_definitions where name=#value#
	</select>
	
	<insert id="insert" parameterClass="aggStatDef">
		<selectKey keyProperty="id" resultClass="int">
			select nextval('opennmsNxtId')
		</selectKey>
		insert into aggregate_status_definitions (id, name) values (#id#, #name#)
	</insert>
	
	<update id="update" parameterClass="aggStatDef">
		update aggregate_status_definitions set name=#name# where id=#id#
	</update>
	
	<delete id="delete" parameterClass="int">
		delete from aggregate_status_definitions where id=#id#
	</delete>
	
</sqlMap>