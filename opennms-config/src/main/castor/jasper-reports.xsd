<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://xmlns.opennms.org/xsd/config/jasper-reports" xmlns:this="http://xmlns.opennms.org/xsd/config/jasper-reports">

  <import namespace="http://xmlns.opennms.org/xsd/config/report-parms" schemaLocation="report-parms.xsd" />

  <element name="jasper-reports">
    <annotation>
      <documentation>Report Configuration for Jasper Reporting API implementation</documentation>
    </annotation>
    <complexType>
      <sequence>
        <element maxOccurs="unbounded" minOccurs="0" ref="this:report" />
      </sequence>
    </complexType>
  </element>

  <element name="report">
    <annotation>
      <documentation>report definition for jasper reports</documentation>
    </annotation>

    <complexType>
      <attribute ref="this:id" use="required" />
      <attribute ref="this:template" use="required" />
      <attribute ref="this:engine" use="required" />
    </complexType>
  </element>

  <attribute name="id" type="string">
    <annotation>
      <documentation>the name of this report</documentation>
    </annotation>
  </attribute>

  <attribute name="template" type="string">
    <annotation>
      <documentation>jxrml report template</documentation>
    </annotation>
  </attribute>

  <attribute name="engine">
    <simpleType>
      <restriction base="string">
        <pattern value="(jdbc|opennms|null)" />
      </restriction>
    </simpleType>
  </attribute>

</schema>