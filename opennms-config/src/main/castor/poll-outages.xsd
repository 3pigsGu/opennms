<?xml version="1.0" encoding="UTF-8"?>
<schema targetNamespace="http://xmlns.opennms.org/xsd/config/poller/outages" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:typ="http://xmlns.opennms.org/xsd/types"
  xmlns:this="http://xmlns.opennms.org/xsd/config/poller/outages" xmlns:ns2="http://www.w3.org/1999/xhtml" xmlns:ns="http://www.w3.org/2001/XMLSchema" xmlns:hfp="http://www.w3.org/2001/XMLSchema-hasFacetAndProperty">
  <annotation>
    <documentation>XML Schema for the poll-outages.xml configuration file.</documentation>
  </annotation>

  <import namespace="http://xmlns.opennms.org/xsd/types" schemaLocation="types.xsd" />

  <element name="outages">
    <annotation>
      <documentation>Top-level element for the poll-outages.xml configuration file.</documentation>
    </annotation>

    <complexType>
      <sequence>
        <element maxOccurs="unbounded" minOccurs="0" ref="this:outage" />
      </sequence>
    </complexType>
  </element>

  <element name="outage">
    <annotation>
      <documentation>a scheduled outage</documentation>
    </annotation>

    <complexType>
      <complexContent>
        <extension base="typ:basicSchedule">
          <sequence>
            <element maxOccurs="unbounded" minOccurs="0" ref="this:interface" />
            <element maxOccurs="unbounded" minOccurs="0" ref="this:node" />
          </sequence>
        </extension>
      </complexContent>
    </complexType>
  </element>

  <element name="interface">
    <annotation>
      <documentation>Interface to which the outage applies.</documentation>
    </annotation>

    <complexType>
      <attribute ref="this:address" use="required" />
    </complexType>
  </element>

  <element name="node">
    <complexType>
      <attribute ref="this:id" use="required" />
    </complexType>
  </element>

  <attribute name="address">
    <annotation>
      <documentation>IP address</documentation>
    </annotation>

    <simpleType>
      <restriction base="string">
        <pattern value="([01]?[0-9][0-9]?|2[0-4][0-9]|25[0-5])(\.([01]?[0-9][0-9]?|2[0-4][0-9]|25[0-5])){3}|(match-any)">
          <annotation>
            <documentation>Requires valid IP address.</documentation>
          </annotation>
        </pattern>
      </restriction>
    </simpleType>
  </attribute>

  <attribute name="id" type="int" />
</schema>
