<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean name="hardwareInventoryProvisioningAdapter" class="org.opennms.netmgt.provision.HardwareInventoryProvisioningAdapter">
		<property name="eventForwarder" ref="eventForwarder" />
		<property name="nodeDao" ref="nodeDao" />
		<property name="hwEntityDao" ref="hwEntityDao" />
		<property name="snmpPeerFactory" ref="snmpPeerFactory" />
		<property name="template" ref="transactionTemplate" />
	</bean>

	<bean id="hardwareInventoryEventListenerAdapter" class="org.opennms.netmgt.model.events.AnnotationBasedEventListenerAdapter">
		<property name="annotatedListener" ref="hardwareInventoryProvisioningAdapter" />
		<property name="eventSubscriptionService" ref="eventSubscriptionService" />
	</bean>

</beans>
