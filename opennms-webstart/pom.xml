<?xml version="1.0" encoding="UTF-8"?>
<project>
  <parent>
    <artifactId>opennms</artifactId>
    <groupId>org.opennms</groupId>
    <version>1.3.2-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>opennms-webstart</artifactId>
  <packaging>jar</packaging>
  <name>OpenNMS WebStart Remote Poller</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>webstart-maven-plugin</artifactId>
        <executions>
           <execution>
              <goals>
                 <goal>jnlp</goal>
              </goals>
           </execution>
        </executions>
        <configuration>
           <outputDirectory>${project.build.director}/classes/webstart</outputDirectory>

           <!-- JNLP generation -->
           <jnlp>
             <outputFile>app.jnlp</outputFile> <!-- defaults to launch.jnlp -->

             <!-- used to automatically identify the jar containing the main class. -->
             <!-- this is perhaps going to change -->
             <mainClass>org.opennms.webstart.poller.Main</mainClass>
           </jnlp>

           <!-- SIGNING in THIS way is 'fake' REAL signing will move to a profile since it is setup specific -->
           <!-- defining this will automatically sign the jar and its dependencies, if necessary -->
           <sign>
             <keystore>${webstart.keystore}</keystore>
             <keypass>${webstart.keypass}</keypass>
             <storepass>${webstart.storepass}</storepass>
             <alias>${webstart.keyalias}</alias>

             <dnameCn>${webstart.dnameCn}</dnameCn>
             <dnameL>${webstart.dnameL}</dnameL>
             <dnameSt>${webstart.dnameSt}</dnameSt>
             <dnameC>${webstart.dnameC}</dnameC>

             <verify>true</verify>
           </sign>

           <!-- KEYSTORE MANGEMENT -->
           <keystore>
             <delete>${webstart.keystore.delete}</delete>
             <gen>${webstart.keygen}</gen>      
           </keystore>

           <!-- BUILDING PROCESS -->
           <!--usejnlpservlet>true</usejnlpservlet--> <!-- not yet supported -->

           <verbose>false</verbose>

        </configuration>
      </plugin>
      <plugin>
        <groupId>org.opennms.maven.plugins</groupId>
        <artifactId>opennms-groovyc-plugin</artifactId>
        <executions>
          <execution>
          <goals>
            <goal>compile</goal>
            <goal>test-compile</goal>
          </goals>
        </execution>
        </executions>
      </plugin>
     <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-groovy-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/main/groovy</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-eclipse-plugin</artifactId>
        <configuration>
          <additionalBuildcommands>
            <buildcommand>org.codehaus.groovy.eclipse.groovyBuilder</buildcommand>
          </additionalBuildcommands> 
          <additionalProjectnatures>
            <projectnature>org.codehaus.groovy.eclipse.groovyNature</projectnature>
          </additionalProjectnatures>
        </configuration>
      </plugin>
    </plugins>

  </build>
  <dependencies>
    <!--
         Sort dependencies by groupId then artifactId, but put dependencies
         with a groupId of org.opennms first.
      -->
    <dependency>
      <groupId>org.opennms</groupId>
      <artifactId>opennms-model</artifactId>
    </dependency>
    <dependency>
      <groupId>org.opennms</groupId>
      <artifactId>opennms-services</artifactId>
    </dependency>
    <dependency>
      <groupId>groovy</groupId>
      <artifactId>groovy</artifactId>
    </dependency>
  </dependencies>
</project>
